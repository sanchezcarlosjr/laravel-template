#!/usr/bin/env bash

git clone https://github.com/sanchezcarlosjr/SIIP.git SIIIP
cd SIIIP || exit 1
git checkout develop
echo "What is your git branch?"
read -r branch
git checkout -b "$branch"
docker-compose up -d
cp html/.env.example html/.env
sudo chmod -R o+w html/storage
sudo chmod -R o+w html/bootstrap/cache
echo "Waiting for composer and npm installation..."
sleep 2
echo -ne '#####                     (33%)\r'
sleep 10
echo -ne '#############             (66%)\r'
sleep 50
echo -ne '#######################   (100%)\r'
echo -ne '\n'
./cli/siip populate 0
clear
echo "ðŸŽ‰ Ready! Welcome to SIIIP."
echo "Do you want to start developing? (y/n)"
read -r input
if [ "$input" == "" ]; then
  echo "bye!"

elif [[ "$input" == "y" ]] || [[ "$input" == "yes" ]]; then
  docker-compose run node npm run watch
  echo "Remember visit http://localhost:8080/"

else
  cd ..
  docker-compose stop
  echo "bye!"
fi
