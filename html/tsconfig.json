{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "module": "esnext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@shared/*": ["resources/js/@shared/*"]
        }
    },
    "include": [
        "resources/js/**/*"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
